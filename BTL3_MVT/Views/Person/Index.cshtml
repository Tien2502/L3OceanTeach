@model X.PagedList.IPagedList<BTL3_MVT.Models.ViewModel.PersonVM>
@using X.PagedList
@using X.PagedList.Mvc.Core;
@using X.PagedList.Web.Common;

@{
    ViewData["Title"] = "Danh sách bệnh nhân";
}
@if (ViewData["Error"] != null)
{
    <div class="alert alert-danger">
        @ViewData["Error"]
    </div>
}
else
{
    <h2 style="margin:50px 0;text-align:center;"><b>Danh Sách Bệnh Nhân</b></h2>

    <div>
        <div class="d-flex justify-content-between align-items-center">
            <a style="margin-bottom:15px;" class="btn btn-secondary" asp-action="Create">Create New</a>
            <div class="flex-grow-1 mx-3 mb-0">
                <div class="input-group mb-3">
                    <input type="text" class="form-control custom-input" id="search-input" placeholder="Tìm kiếm...">
                    <div class="input-group-append">
                        <button style="width:45px; height:45px; margin-left:5px;" class="btn btn-primary" type="button" id="search-button"><i class="fas fa-search"></i></button>
                    </div>
                </div>
            </div>
        </div>
        <br>
    </div>

    <div id="search-results">
        @Html.Partial("_SearchResult", Model)
    </div>
}
